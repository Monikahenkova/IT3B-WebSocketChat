<Window x:Class="IT3B_Chat.Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IT3B_Chat.Server"
        mc:Ignorable="d"
        Title="WebSocket Server" Height="450" Width="800" Background="CadetBlue">
    <Grid>
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Zprávy od klientů:" FontWeight="Bold" Height="76" Width="777"/>
            <ListBox x:Name="MessageListBox" Height="300"/>
        </StackPanel>

        <StackPanel Margin="10,37,10,-17">
            <TextBlock Text="Připojení/odpojení klientů:" FontWeight="Bold"/>
            <ListBox x:Name="ConnectionListBox" Height="100"/>
        </StackPanel>
    </Grid>
</Window>
