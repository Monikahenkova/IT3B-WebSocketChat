<Window x:Class="IT3B_Chat.Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IT3B_Chat.Server"
        mc:Ignorable="d"
        Title="WebSocket Server" Height="450" Width="800" Background="#7D26CD">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox x:Name="serverAddressTextBox" Grid.Row="0" Margin="10" Background="White" Foreground="Black" Text="ws://localhost:8080" />

        <Button x:Name="connectDisconnectButton" Grid.Row="1" Margin="10" Content="Připojit" Click="ConnectDisconnect_Click" Background="White" Foreground="Black" />

        <ListBox x:Name="serverMessagesListBox" Grid.Row="2" Margin="10" Background="White" Foreground="Black" />

        <TextBox x:Name="newMessageTextBox" Grid.Row="3" Margin="10" Background="White" Foreground="Black" />

        <Button x:Name="sendMessageButton" Grid.Row="4" Margin="10" Content="Odeslat zprávu" Click="SendMessage_Click" Background="White" Foreground="Black" />

    </Grid>
</Window>
